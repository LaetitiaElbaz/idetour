{% extends 'base.html.twig' %}

{% block title %}Poi Liste{% endblock %}

{% block body %}
    <h1>Liste des Poi</h1>

    {{ form_start(form) }}

            {{ form_widget(form) }}

            <p>
                <button class="btn btn-primary">{{ button_label|default('Voir la liste') }}</button>
            </p>



     <table class="table table-striped">
        <thead>
            <tr>
                <th>PoiName</th>
                <th>Description</th>
                <th>Address</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poi in pois %}
         {# {{ dump(pois) }} #}
            <tr>
                <td>{{ poi.poiName }}</td>
                <td>{{ poi.description }}</td>
                <td>{{ poi.address }}</td>
                <td>{{ poi.city.cityCode }}</td>
                <td>{{ poi.city.cityName }}</td>
                <td>
                    <a href="#">Laisser un commentaire</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {{ form_end(form) }}






{% endblock %}
